{
  "name": "inventory-database",
  "version": "0.1.0",
  "description": "The Inventory database package",
  "private": true,
  "author": "vanister",
  "license": "MIT",
  "directories": {
    "doc": "The documentation for the project.",
    "dist": "The built code."
  },
  "keywords": [
    "postgres",
    "typescript",
    "sequelize"
  ],
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=6.14.0"
  },
  "scripts": {
    "build": "npx tsc -p tsconfig.dev.json",
    "build:cjs": "npx tsc -p tsconfig.cjs.json",
    "build:esm": "npx tsc -p tsconfig.esm.json",
    "build:full": "npm run clean && npm run build:cjs && npm run build:esm && npm run copy-packageinfo",
    "clean": "npx rimraf ./dist",
    "copy-packageinfo": "node --experimental-json-modules copy-packageinfo.js",
    "test": "npx jest",
    "sql": "npx sequelize",
    "sql:create-db": "npm run sql -- db:create",
    "sql:drop-db": "npm run sql -- db:drop",
    "sql:migrate": "npm run clean && npm run build && npm run sql -- db:migrate --env local",
    "sql:migration-gen": "npm run sql -- migration:generate --migrations-path='./migrations' --underscored --name",
    "sql:model-gen": "npm run sql -- model:generate",
    "sql:restore": "npm run sql:drop-db && npm run sql:create-db && npm run clean:all && npm run sql:migrate",
    "sql:seed": "npm run sql -- db:seed",
    "sql:seed-gen": "npm run sql -- seed:generate"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "pg": "^8.4.1",
    "pg-hstore": "^2.3.3"
  },
  "peerDependencies": {
    "sequelize": "^6.3.5"
  },
  "devDependencies": {
    "@types/node": "^14.11.8",
    "@types/validator": "^13.1.0",
    "rimraf": "^3.0.2",
    "sequelize": "^6.3.5",
    "sequelize-cli": "^6.2.0",
    "sqlite3": "^5.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}