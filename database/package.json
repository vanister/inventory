{
  "name": "inventory-database",
  "version": "0.1.0",
  "description": "The Inventory database package",
  "private": true,
  "author": "vanister",
  "license": "MIT",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npx tsc",
    "test": "jest",
    "sql": "npx sequelize",
    "sql:migrate": "npm run build && npm run sql -- db:migrate",
    "sql:migration-gen": "npm run sql -- migration:generate",
    "sql:seed": "npm run sql -- db:seed",
    "sql:seed-gen": "npm run sql -- seed:generate",
    "sql:model-gen": "npm run sql -- model:generate"
  },
  "dependencies": {
    "pg": "^8.4.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.5"
  },
  "devDependencies": {
    "@types/node": "^14.11.8",
    "@types/validator": "^13.1.0",
    "sequelize-cli": "^6.2.0",
    "typescript": "^4.0.3"
  }
}
