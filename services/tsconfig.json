{
  "include": ["./src"],
  "compilerOptions": {
    // node 12.x supports es2018
    "target": "ES2018",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "./build",
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true /* Disallow inconsistently-cased references to the same file. */
  }
}
